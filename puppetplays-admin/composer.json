{
  "require": {
    "craftcms/cms": "^3.5.10",
    "craftcms/element-api": "^2.6",
    "craftcms/redactor": "^2.8",
    "mmikkel/reasons": "^2.2",
    "verbb/workflow": "^1.5",
    "vlucas/phpdotenv": "^3.4.0"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.9",
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\sitemodule\\": "modules/sitemodule/src/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.2.5"
    }
  },
  "scripts": {
    "craft-update": [
      "@pre-craft-update",
      "@post-craft-update"
    ],
    "pre-craft-update": [
    ],
    "post-craft-update": [
      "@php craft install/check && php craft clear-caches/all || return 0",
      "@php craft install/check && php craft migrate/all || return 0",
      "@php craft install/check && php craft project-config/apply || return 0"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "pre-update-cmd": "@pre-craft-update",
    "pre-install-cmd": "@pre-craft-update",
    "post-update-cmd": "@post-craft-update",
    "post-install-cmd": "@post-craft-update"
  }
}
