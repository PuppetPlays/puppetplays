{
  "name": "puppetplays-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development node server.js",
    "proxy-ssl": "npx local-ssl-proxy --source 7001 --target 7000",
    "start": "next start",
    "test": "jest --watch",
    "test:no-watch": "jest",
    "test:ci": "jest --ci --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --browser chrome",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "next build",
    "postbuild": "next-sitemap"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/cypress"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "^react-merge-refs$": "<rootDir>/__mocks__/react-merge-refs.js",
      "^query-string$": "<rootDir>/__mocks__/query-string.js",
      "^cookie$": "<rootDir>/__mocks__/cookie.js",
      "^react-accessible-dropdown-menu-hook$": "<rootDir>/__mocks__/react-accessible-dropdown-menu-hook.js",
      "^@floating-ui/react$": "<rootDir>/__mocks__/@floating-ui/react.js",
      "^next-i18next$": "<rootDir>/__mocks__/next-i18next.js"
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest"
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(query-string|react-merge-refs|cookie|react-accessible-dropdown-menu-hook|@floating-ui)/).+\\.js$"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "watchman": false
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.6",
    "@floating-ui/react-dom": "^2.1.2",
    "@tippyjs/react": "^4.2.6",
    "classnames": "^2.3.1",
    "cookie": "^1.0.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.7",
    "express": "^4.18.1",
    "i18next": "^24.2.3",
    "is-touch-device": "^1.0.1",
    "jest-environment-jsdom": "^29.7.0",
    "lodash": "^4.17.21",
    "next": "13",
    "next-i18next": "^15.4.2",
    "next-seo": "^6.6.0",
    "next-sitemap": "^4.2.3",
    "ol": "^6.5.0",
    "prop-types": "^15.8.1",
    "query-string": "^9.1.1",
    "react": "^19.1.0",
    "react-accessible-dropdown-menu-hook": "^4.0.0",
    "react-cookie": "^4.1.1",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.4.1",
    "react-merge-refs": "^2.1.1",
    "react-modal": "^3.15.1",
    "react-paginate": "^8.1.0",
    "react-select": "^5.3.2",
    "react-slider": "^2.0.0",
    "swr": "^0.3.9",
    "text-clipper": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "cypress": "^9.7.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "http-proxy-middleware": "^2.0.6",
    "jest": "^29.7.0",
    "nock": "^13.2.4",
    "prettier": "^3.5.3",
    "sass": "^1.51.0"
  }
}
